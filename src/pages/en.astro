---
import Layout from '../Layouts/Layout.astro';

// Datos de tus proyectos
const PROJECTS = [
  {
    title: "IMSS Digital Vaccination Card Prototype",
    company: "Technology Innovation and Development Directorate",
    description: "Development of user stories and business logic for the official vaccination application. Collaboration in designing critical user flows under agile methodologies.",
    tags: ["Product Owner Support", "User Stories", "Healthcare Tech"],
    link: "https://github.com/alexysge/Cartilla-Digital"
  },
  {
    title: "QA Testing – Mass Validation",
    company: "Social Service Project / Technology Innovation Directorate",
    description: "Design and execution of data-driven testing using SoapUI 3.6. Automated validation of over 1,200 Excel records, ensuring web service data integrity.",
    tags: ["SoapUI", "Excel", "QA Testing"]
  },
  {
    title: "Investment Portfolio Optimization",
    company: "Academic Project / Evolutionary Computing",
    description: "Implementation of the Cuckoo Search algorithm in Python for financial decision-making. Convergence analysis to maximize returns and diversify risk under complex constraints.",
    tags: ["Python", "Metaheuristics", "AI"],
    link: "https://github.com/alexysge/Proyecto-Final-Comp-Evolutivo"
  },
  {
    title: "Repair Wars",
    company: "Global Game Jam 2020",
    description: "Hybrid Developer and QA role in a 72-hour event. Intensive functional testing, identification of critical gameplay bugs, and documentation of feedback to refine user experience. Gameplay mechanics programmed in C#.",
    tags: ["Game Testing", "Bug Tracking", "Teamwork"],
    link: "https://github.com/ivarog/Repair-Wars"
  },
  {
    title: "Pingu Clicker",
    company: "Personal Project (Godot)",
    description: "Full-cycle development of an incremental game. Implementation of progression systems and resource logic. Rigorous regression and manual testing to maintain stability after each update.",
    tags: ["Godot Engine", "Regression Testing", "Game Logic"],
    link: "https://github.com/alexysge/PinwiCome"
  },
  {
    title: "Comedy Cinema Web Management & Design",
    company: "Agile Academic Project",
    description: "Application of Scrum frameworks to manage a comedy cinema web section. Delivery optimization, backlog prioritization, and UX/UI design using Astro.",
    tags: ["Scrum", "Agile", "UX/UI"],
    link: "https://github.com/Diana-Matu/IS_CodeFlix_Comedia"
  }
];

---

<Layout title="Alexys Gómez | Software Engineer & QA">
  
  <header class="mb-20 animate-fade-in">
    <div class="flex items-center gap-4 mb-6">
      <span class="px-3 py-1 rounded-full bg-purple-500/10 text-purple-400 text-xs font-mono border border-purple-500/20">
        Available for new challenges
      </span>
    </div>
    <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 tracking-tight">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-purple-800">Alexys Gómez Elizalde</span>
    </h1>
    <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
      Computer Science graduate from <span class="text-yellow-500 font-medium">UNAM</span>.  
      Specialized in software quality assurance and building robust solutions.  
      Focused on <span class="text-slate-200">QA Automation, SQL, and agile methodologies</span>.
    </p>
    
    <div class="flex flex-wrap items-center gap-4 mt-8">
        <a href="/cv-alexys.pdf" download 
          class="group relative px-6 py-3 bg-white text-slate-950 font-bold rounded-full 
                  transition-all duration-300 ease-out 
                  hover:-translate-y-1 hover:shadow-[0_0_25px_rgba(168,85,247,0.7)] hover:bg-purple-10 
                  flex items-center gap-2">
            <span class="relative z-10 flex items-center gap-2">
                Download CV
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-y-1 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
            </span>
          <div class="absolute inset-0 rounded-full bg-purple-400 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>

        <div class="h-8 w-px bg-slate-800 mx-2 hidden md:block"></div>

      <div class="flex gap-4">
        
        <a href="https://github.com/alexysge" target="_blank" 
          class="p-3 rounded-full border border-slate-800 bg-slate-900/50 text-white 
                  transition-all duration-300 
                  hover:-translate-y-1 hover:scale-110 hover:bg-white hover:text-slate-900 
                  hover:shadow-[0_0_20px_rgba(255,255,255,0.6)]" 
          aria-label="GitHub">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">

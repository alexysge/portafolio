---
import Layout from '../layouts/Layout.astro';

// Aquí puedes centralizar tus datos para que sea fácil editarlos después
const PROJECTS = [
	{
		title: "Sistema de Vacunación - IMSS",
		description: "Desarrollo de historias de usuario y lógica para aplicación de vacunas. Enfoque en accesibilidad y flujos de usuario.",
		tags: ["Gestión", "Scrum", "IMSS"]
	},
	{
		title: "Automatización de Pruebas QA",
		description: "Validación masiva de +1200 registros utilizando SoapUI 3.6 y Excel para asegurar integridad de datos.",
		tags: ["QA", "SoapUI", "Data Testing"]
	}
];
---

<Layout title="Alexys Gómez | Portafolio">
	
	<header class="mb-16">
		<h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-4">
			Alexys Gómez Elizalde
		</h1>
		<p class="text-xl text-slate-400 max-w-2xl">
			Estudiante de Ciencias de la Computación en la <span class="text-yellow-500/90 font-semibold">UNAM</span>. 
			Especializado en <span class="text-cyan-400">QA Testing</span> y desarrollo de software con metodologías ágiles.
		</p>
		<div class="flex gap-4 mt-6">
			<a href="/cv-alexys.pdf" class="px-4 py-2 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded-lg transition-colors">
				Descargar CV
			</a>
			<a href="https://github.com/alexysge" class="px-4 py-2 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded-lg transition-colors">
				GitHub
			</a>
		</div>
	</header>

	<section class="mb-16">
		<h2 class="text-2xl font-semibold mb-6 flex items-center gap-2">
			<span class="w-8 h-px bg-cyan-500"></span> Skills
		</h2>
		<div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
			<div class="p-3 bg-slate-900/50 rounded border border-slate-800">Python & SQL</div>
			<div class="p-3 bg-slate-900/50 rounded border border-slate-800">SoapUI 3.6</div>
			<div class="p-3 bg-slate-900/50 rounded border border-slate-800">GCP & Cloud</div>
			<div class="p-3 bg-slate-900/50 rounded border border-slate-800">Scrum / Agile</div>
		</div>
	</section>

	<section class="mb-16">
		<h2 class="text-2xl font-semibold mb-6 flex items-center gap-2">
			<span class="w-8 h-px bg-cyan-500"></span> Proyectos
		</h2>
		<div class="space-y-8">
			{PROJECTS.map(project => (
				<article class="group relative flex flex-col gap-2 p-6 rounded-xl bg-slate-900/30 border border-slate-800 hover:border-cyan-500/50 transition-all">
					<h3 class="text-xl font-bold text-cyan-400">{project.title}</h3>
					<p class="text-slate-400 leading-relaxed">{project.description}</p>
					<div class="flex gap-2 mt-2">
						{project.tags.map(tag => (
							<span class="text-xs px-2 py-1 bg-cyan-500/10 text-cyan-400 rounded-full border border-cyan-500/20">{tag}</span>
						))}
					</div>
				</article>
			))}
		</div>
	</section>

</Layout>